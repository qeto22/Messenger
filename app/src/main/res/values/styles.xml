    <style name="ExpandedAppBarSubtitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollapsedAppBarSubtitle" parent="@android:style/TextAppearance.Medium">
